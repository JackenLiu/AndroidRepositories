<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="my_dialog" parent="android:style/Theme.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="popup_window_translate_anim">
        <item name="android:windowEnterAnimation">@anim/popup_window_translate</item>
    </style>

    <style name="AnimationTextView">

        <item name="android:background">@color/colorPrimary</item>

        <item name="android:padding">16dp</item>

        <item name="android:layout_margin">8dp</item>

        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>

        <item name="android:textColor">@android:color/white</item>

    </style>

    <declare-styleable name="TextViewFitPt">
        <attr name="textPtSize" format="integer" />

    </declare-styleable>
</resources>